@model IEnumerable<AplicativoWebAcademia.Models.PessoaModel>

@{
    ViewData["Title"] = "Pessoa Fisica";
}

<h1>Aba de Clientes - Pessoa Fisica</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeFilhos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
             </th>
            <th>
                @Html.DisplayNameFor(model => model.Alterar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantidadeFilhos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alterar)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Codigo" class="btn btn-outline-primary">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.Codigo" class="btn btn-outline-primary">Detalhes</a> 
                    <a asp-action="Delete" asp-route-id="@item.Codigo" class="btn btn-outline-primary">Deletar</a> 
                    <a asp-action="VerificaAlteração" asp-route-id="@item.Codigo" class="btn btn-outline-primary">Alterar situação</a>

                </td>
            </tr>
        }
    </tbody>
</table>
